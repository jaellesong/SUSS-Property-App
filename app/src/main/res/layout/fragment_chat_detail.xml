                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="123 Ang Mo Kio"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

