                <ImageView
                    android:id="@+id/ivChat1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/account_circle_24px" />

                <LinearLayout
