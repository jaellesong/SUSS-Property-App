<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.susspropertyapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.account.NewListingActivity"/>
        <activity android:name=".ui.home.FilterActivity" />
        <activity android:name=".login.ui.MainLoginActivity" />
        <activity android:name=".login.ui.LoginActivity" />
        <activity android:name=".login.ui.RegisterActivity" />

        <activity android:name=".ui.home.MapActivity">
            <intent-filter>
                <action android:name="mapactivity.intent.action.Launch" />
            </intent-filter>
        </activity>

        <service
            android:name=".ui.home.FetchAddressIntentService"
            android:exported="false" />
    </application>

</manifest>